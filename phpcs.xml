<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="oaf">
  <rule ref="./vendor/drupal/coder/coder_sniffer/Drupal" />

  <description>Basic PHP CodeSniffer configuration for OAF, Drupal rules.</description>
  <arg name="basepath" value="."/>
  <arg name="colors"/>
  <arg name="parallel" value="75"/>
  <arg value="np"/>
  <arg name="extensions" value="php"/>
  <arg name="encoding" value="UTF-8"/>
  <arg name="tab-width" value="4"/>

  <!-- Disable a few sniffs. -->
  <rule ref="Drupal">
    <exclude name="Drupal.Arrays.Array"/>
    <exclude name="Drupal.Commenting.DocComment"/>
    <exclude name="Drupal.NamingConventions.ValidGlobal"/>
    <exclude name="Drupal.NamingConventions.ValidVariableName"/>
  </rule>

  <!--Exclude third party code.-->
  <exclude-pattern>./vendor/*</exclude-pattern>

  <!-- Exclude non-PHP stuff -->
  <exclude-pattern>./conf/*</exclude-pattern>
  <exclude-pattern>./data/*</exclude-pattern>
  <exclude-pattern>./db/*</exclude-pattern>
  <exclude-pattern>./search/*</exclude-pattern>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>*.html</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>
  <exclude-pattern>*.md</exclude-pattern>
</ruleset>
